{
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "changelog": "./internal/scripts/changelog.sh stdout"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "web": false,
    "draft": false,
    "releaseNotes": "./internal/scripts/changelog.sh stdout"
  },
  "hooks": {
    "before:init": [],
    "after:bump": "./internal/scripts/changelog.sh"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "VERSION",
          "type": "text/plain"
        },
        {
          "file": "fivem/fivenet/package.json",
          "path": "version"
        },
        {
          "file": "fivem/fivenet/ui/package.json",
          "path": "version"
        },
        {
          "file": "fivem/fivenet/fxmanifest.lua",
          "type": "text/plain"
        }
      ]
    }
  }
}